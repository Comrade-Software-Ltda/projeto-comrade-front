{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start:debug",
      "label": "npm: start:debug",
      "detail": "node .bless.js && node --max_old_space_size=8192 ./node_modules/@angular/cli/bin/ng serve --configuration=debug --hmr",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": [
          "relative",
          "${cwd}"
        ],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "Compiled |Failed to compile."
          }
        }
      }
    }
  ]
}
